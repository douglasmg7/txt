lspci -k    # to list pci hardwares

lsusb -v    # to list usb drivers

dmesg | grep firmware   # to list firmware messages

ip    # show / manipulate routing, devices, policy routing and tunnels

ip link   # list all interfaces
ip a      # list all interfaces

ip link show wlan0  # show specific interface

ip link set dev wlan0 up    # activate a interface
ip link set dev wlan0 down  # deactivate a interface

iw dev    # list all wifi devices

iw dev wlan0 info   # show interface status

iw dev wlan0 scan | grep SSID   # scan wifi network (su)
iw wlan0 scan | grep SSI        # scan wifi network (su)

iw wlan0 link   # check connection status

iw dev wlan0 connect "your_essid"   # connect to an access point - no encryption

ifdown wlan0  # shutdown interface wlan0

ifup wlan0    # start interface wla0

wpa_passphrase my-ssid password   # create password to use into /etc/network/interface or /etc/wpa_supplicant.conf

wpa_passphrase ssid > file_out    # create password into file_out
password

