wpa_supplicant -B -D wext -i wlan0 -c /etc/wpa_supplicant.conf  # connect networking using supplicant
	# -B means run wpa_supplicant in the background
	# -D specifies the wireless driver. wext is the generic driver
	# -c specifies the path for the configuration file

dhclient wlan0  # get an IP address by DHCP

ifconig   # list interfaces

ifconfig wlan0        # show ip address

ip addr show wlan0    # show ip address

ip route show     # show routes

nmcli d wifi list   # list wifi hotspots

nmcli c   # list saved connections

nmcli d disconnect wlan0  # disconnect device wlan0

nmcli d connect wlan0   # connect device wlan0

nmcli c down XT1058\ dmg  # disconnect from hotspot, system will connect to the next saved disponiable

nmcli c up XT1058\ dmg  # connect to hotspot, not need disconnect from previows
