# change to other branch
# make the working directory and the HEAD match the specified branch
git switch <branch_name>
git checkout <branch_name>

# create and switch to the created branch
git switch -c <branch_name>

# create, switch to the new a branch and push.
git checkout -b <branch_name>
git commit
git push -u origin <branch_name>

# create a new branch using the current working directory as its base.
git branch <branch_name>

# list all branches.
git branch
# include remote tracking branches in red
git branch -a

# list remote branchs, need use 'git fetch' first.
git branch -r

# list all branchs.
git remote show origin

# delete a branch, must be out the branch to be deleted
git branch -d <branch_name>
git branch --delete <branch_name>

# delete a branch with warnings, no merged branch
git branch -D <branch_name>
git branch --delete --force <branch_name>

# delete remote branch.
git push origin :<branch_name>
git push origin --delete <branch_name>

# clean up deleted remote branches.
git remote prune origin

# reviewing a pull request.
git fetch
git branch -a
git checkout <branch_name>

# rename a branch, must be in the branch
cd <to_root_of_repository>
git switch <branch_to_be_renamed>
git branch -m <new_branch_name>
# or
git branch --move <new_branch_name>
