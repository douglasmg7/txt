/etc/i3blocks.conf
/etc/i3status.conf
/etc/i3/conf.keycodes
/etc/i3/conf
~/.i3/conf
  Config files

/usr/lib/i3blocks/
  Script used by status bar

alt+enter open terminal

alt+v
  split vertical

alt+h
  split horizontal

alt+e
  switch for split

alt+s
  switch for stacking

alt+w
  switch for tabbed

alt+f
  toggle fullscreen mode

alt+d
  open dmenu

alt+shift+q
  kill a window

alt+num
  switch to a workspace

alt+shift+num
  move a window to another workspace.

alt+shift+e
  Exit i3, without kill X server.

alt+shift+space
  Toggle a selected window to float/tilling mode

alt+j
  Focus left

alt+;
  Focus right

alt+k
  Focus down

alt+l
  Focus up

alt+shift+j
  Move window left

alt+shift+;
  Move window right

alt+shift+k
  Move window down

alt+shift+l
  Move window up

alt+a
  Focus the parent container

alt+shift+c
  Reload the configuration file

alt+shift+r
  Restart - preserves the layout/session

alt+r
  mode resize
  enter to exit
