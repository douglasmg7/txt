# Start X using ~/.xinitrc.
startx

# Quit X.
Ctrl + Alt + 2  # To change to other terminal.
pkill -15 Xorg

# Start X using dwm windows manager without load .xinitrc.
startx /usr/bin/dwm

# Start X with one specific application.
startx /usr/bin/firefox

# Load a resource file, replacing any current settings.
xrdb ~/Xrescources

# Load a resource and merge with the current settings.
xrdb -merge ~/Xresources

# See the current loaded resources.
xrdb -query all

# Set the name of the root window.
xsetroot -name "asdfasdf"
