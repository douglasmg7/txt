mplayer a.mp3 -ss 5 -endpos 2 -loop 3   # start at 5 seconds, finish 2 seconds later and repeat 3 times

mplayer -cache 2000 cdda://
# play a cd.

9
# volume down

0
# volume up

mplayer cdda://3:1 -cache 1024
# Play track 3, cdrom speed 1

# Play a DVD from the menu.
# /dev/sr0 was created by the system instead of /dev/dvd.
mplayer dvdnav:// -dvd-device /dev/sr0

# Play a DVD from chapter 1.
mplayer dvd://1 -dvd-device /dev/sr0

# Play a DVD from chapter 2.
mplayer dvd://2 -dvd-device /dev/sr0

# Resize osd:
mplayer -subfont-osd-scale 1 00_INTRODUCTION_01.mp4

