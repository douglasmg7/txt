# Print a table of glyphs or letters of a font.
showconsolefont

# Available console fonts
/usr/share/kbd/consolefonts/

# Available translations
/usr/share/kbd/consoletrans/

# Font files
/usr/share/fonts/

# Temporary set a font for console.
setfont font_file -m font_translation

# Temporary set a font for console.
setfont cp866-8x16 -m 8859-2

# Return to original font configuration for console.
setfont

#  Find which font it is representing the alias.
fc-match monospace

#  Find which font it is representing the alias with more info.
fc-match -v monospace

# List all installed fonts.
fc-list

# Update font list from installed fonts.
fc-cache
